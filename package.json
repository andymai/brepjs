{
  "name": "brepjs",
  "version": "4.26.0",
  "description": "Web CAD library built on OpenCascade",
  "keywords": [
    "cad",
    "opencascade",
    "brep",
    "STEP",
    "STL"
  ],
  "author": "Andy Mai",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/andymai/brepjs"
  },
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">=24 <25"
  },
  "packageManager": "npm@11.6.1",
  "workspaces": [
    "packages/*",
    "site"
  ],
  "main": "./dist/brepjs.cjs",
  "module": "./dist/brepjs.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/brepjs.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/brepjs.cjs"
      }
    },
    "./core": {
      "import": {
        "types": "./dist/core.d.ts",
        "default": "./dist/core.js"
      },
      "require": {
        "types": "./dist/core.d.ts",
        "default": "./dist/core.cjs"
      }
    },
    "./result": {
      "import": {
        "types": "./dist/result.d.ts",
        "default": "./dist/result.js"
      },
      "require": {
        "types": "./dist/result.d.ts",
        "default": "./dist/result.cjs"
      }
    },
    "./vectors": {
      "import": {
        "types": "./dist/vectors.d.ts",
        "default": "./dist/vectors.js"
      },
      "require": {
        "types": "./dist/vectors.d.ts",
        "default": "./dist/vectors.cjs"
      }
    },
    "./topology": {
      "import": {
        "types": "./dist/topology.d.ts",
        "default": "./dist/topology.js"
      },
      "require": {
        "types": "./dist/topology.d.ts",
        "default": "./dist/topology.cjs"
      }
    },
    "./operations": {
      "import": {
        "types": "./dist/operations.d.ts",
        "default": "./dist/operations.js"
      },
      "require": {
        "types": "./dist/operations.d.ts",
        "default": "./dist/operations.cjs"
      }
    },
    "./2d": {
      "import": {
        "types": "./dist/2d.d.ts",
        "default": "./dist/2d.js"
      },
      "require": {
        "types": "./dist/2d.d.ts",
        "default": "./dist/2d.cjs"
      }
    },
    "./sketching": {
      "import": {
        "types": "./dist/sketching.d.ts",
        "default": "./dist/sketching.js"
      },
      "require": {
        "types": "./dist/sketching.d.ts",
        "default": "./dist/sketching.cjs"
      }
    },
    "./query": {
      "import": {
        "types": "./dist/query.d.ts",
        "default": "./dist/query.js"
      },
      "require": {
        "types": "./dist/query.d.ts",
        "default": "./dist/query.cjs"
      }
    },
    "./measurement": {
      "import": {
        "types": "./dist/measurement.d.ts",
        "default": "./dist/measurement.js"
      },
      "require": {
        "types": "./dist/measurement.d.ts",
        "default": "./dist/measurement.cjs"
      }
    },
    "./io": {
      "import": {
        "types": "./dist/io.d.ts",
        "default": "./dist/io.js"
      },
      "require": {
        "types": "./dist/io.d.ts",
        "default": "./dist/io.cjs"
      }
    },
    "./worker": {
      "import": {
        "types": "./dist/worker.d.ts",
        "default": "./dist/worker.js"
      },
      "require": {
        "types": "./dist/worker.d.ts",
        "default": "./dist/worker.cjs"
      }
    },
    "./quick": {
      "import": {
        "types": "./dist/quick.d.ts",
        "default": "./dist/quick.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && node scripts/build-quick.js",
    "dev": "vite build --watch",
    "prepublishOnly": "npm run build",
    "prepack": "bash scripts/validate-pack.sh",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:affected": "vitest run --changed",
    "check:boundaries": "bash scripts/check-layer-boundaries.sh",
    "bench": "vitest run --config vitest.bench.config.ts",
    "bench:json": "BENCH_OUTPUT_JSON=1 vitest run --config vitest.bench.config.ts",
    "check:boundaries:staged": "bash scripts/check-layer-boundaries.sh --staged",
    "check:readme-reminders": "bash scripts/check-readme-reminders.sh",
    "example": "npx tsx",
    "knip": "knip",
    "docs:api": "typedoc",
    "docs:generate-lookup": "npx tsx scripts/generate-function-lookup.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.0",
    "@commitlint/config-conventional": "20.4.0",
    "@eslint/js": "9.39.2",
    "@types/opentype.js": "1.3.9",
    "@vitest/coverage-v8": "4.0.18",
    "brepjs-opencascade": "*",
    "eslint": "9.39.2",
    "husky": "9.1.7",
    "knip": "5.82.1",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "typedoc": "0.28.16",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vite": "7.3.1",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "brepjs-opencascade": "^0.5.1 || ^0.6.0 || ^0.7.0"
  },
  "dependencies": {
    "flatbush": "4.5.0",
    "opentype.js": "1.3.4"
  }
}
