{
  "name": "brepjs",
  "version": "5.0.0",
  "description": "Web CAD library built on OpenCascade",
  "keywords": [
    "cad",
    "opencascade",
    "brep",
    "STEP",
    "STL"
  ],
  "author": "Andy Mai",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/andymai/brepjs"
  },
  "type": "module",
  "main": "./dist/brepjs.cjs",
  "module": "./dist/brepjs.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/brepjs.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/brepjs.cjs"
      }
    },
    "./core": {
      "import": {
        "types": "./dist/core.d.ts",
        "default": "./dist/core.js"
      },
      "require": {
        "types": "./dist/core.d.ts",
        "default": "./dist/core.cjs"
      }
    },
    "./query": {
      "import": {
        "types": "./dist/query.d.ts",
        "default": "./dist/query.js"
      },
      "require": {
        "types": "./dist/query.d.ts",
        "default": "./dist/query.cjs"
      }
    },
    "./measurement": {
      "import": {
        "types": "./dist/measurement.d.ts",
        "default": "./dist/measurement.js"
      },
      "require": {
        "types": "./dist/measurement.d.ts",
        "default": "./dist/measurement.cjs"
      }
    },
    "./worker": {
      "import": {
        "types": "./dist/worker.d.ts",
        "default": "./dist/worker.js"
      },
      "require": {
        "types": "./dist/worker.d.ts",
        "default": "./dist/worker.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:affected": "vitest run --changed",
    "check:boundaries": "bash scripts/check-layer-boundaries.sh",
    "bench": "vitest run --config vitest.bench.config.ts",
    "bench:json": "BENCH_OUTPUT_JSON=1 vitest run --config vitest.bench.config.ts",
    "check:boundaries:staged": "bash scripts/check-layer-boundaries.sh --staged",
    "check:readme-reminders": "bash scripts/check-readme-reminders.sh",
    "knip": "knip",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@eslint/js": "^9.18.0",
    "@types/opentype.js": "^1.3.4",
    "@vitest/coverage-v8": "^4.0.18",
    "brepjs-opencascade": "^0.5.1 || ^0.6.0 || ^0.7.0",
    "eslint": "^9.18.0",
    "husky": "^9.1.0",
    "knip": "^5.41.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "brepjs-opencascade": "^0.5.1 || ^0.6.0 || ^0.7.0"
  },
  "dependencies": {
    "flatbush": "^4.4.0",
    "opentype.js": "^1.3.4"
  }
}
