{
  "name": "brepjs",
  "version": "0.1.0",
  "description": "Web CAD library built on OpenCascade",
  "keywords": [
    "cad",
    "opencascade",
    "brep",
    "STEP",
    "STL"
  ],
  "author": "Andy Mai",
  "license": "MIT",
  "type": "module",
  "main": "./dist/brepjs.cjs",
  "module": "./dist/brepjs.js",
  "types": "./dist/brepjs.d.ts",
  "exports": {
    ".": {
      "import": "./dist/brepjs.js",
      "require": "./dist/brepjs.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:affected": "vitest run --changed",
    "check:boundaries": "bash scripts/check-layer-boundaries.sh",
    "check:boundaries:staged": "bash scripts/check-layer-boundaries.sh --staged",
    "knip": "knip",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@eslint/js": "^9.18.0",
    "@types/opentype.js": "^1.3.4",
    "brepjs-opencascade": "file:packages/brepjs-opencascade",
    "eslint": "^9.18.0",
    "husky": "^9.1.0",
    "knip": "^5.41.0",
    "lint-staged": "^15.4.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "flatbush": "^4.4.0",
    "opentype.js": "^1.3.4"
  }
}
